    <section class="cart-container">
        <div class="container-head">
            <div class="container">
                <div class="row">
                    <div class="col-md-12">
                        <div class="titlepage">
                            <h2>Your cart</h2>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="container">
            <table style="width: 100%">
                <tr class="container-headname">
                    <div>
                        <th id="cart-product" style="width: 200px;">Product</th>
                        <th id="cart-product"></th>
                        <th>Quantity</th>
                        <th id="sub">Subtotal</th>
                        <hr class="mx-auto" />
                    </div>
                </tr>

                <% cart.forEach(function(item) { %>
                    <tr>
                        <td>
                            <div class="products-info" style="margin-bottom: 20px;">
                                <img src="images/<%= item.image %>" />
                            </div>
                        </td>
                        <td>
                            <div class="cart-content" style="margin-left: 50px;">
                                <p>
                                    <%= item.name %>
                                </p>
                                <% if (item.sale_price) { %>
                                    <b style="font-size: 150%;">$<span style="color: red;">
                                            <%= item.sale_price %>
                                        </span></b><br>
                                    <span style="text-decoration: line-through;">$ <%= item.price %></span>
                                    <% } else { %>
                                        <b style="font-size: 150%;">$ <%= item.price %></b>
                                        <% } %>
                                            <form method="post" action="/remove_product">
                                                <input type="hidden" name="id" value="<%= item.id %>"
                                                    class="remove-btn" />
                                                <input type="submit" name="remove_btn" class="btn remove-btn"
                                                    value="remove" />
                                            </form>
                            </div>
                        </td>
                        <td>
                            <form method="post" action="/edit_product_quantity">
                                <input type="hidden" value="<%= item.id %>" name="id">
                                <input type="submit" value="-" name="decrease_product_quantity"
                                    class="decrease_product_quantity">
                                <input type="text" name="quantity" value="<%= item.quantity %>" readonly>
                                <input type="submit" value="+" name="increase_product_quantity"
                                    class="increase_product_quantity">
                            </form>
                        </td>
                        <td>
                            <% if (item.sale_price) { %>
                                <span class="product-price" cart-total>$ <%= item.sale_price * item.quantity %></span>
                                <% } else { %>
                                    <span class="product-price">$ <%= item.price * item.quantity %></span>
                                    <% } %>
                        </td>
                    </tr>
                    <% }); %>
            </table>

        </div>

        <div class="container">
            <table class="cart-total" style="width: 100%">

                <tr>
                    <td id="#sub" width="73%">Total <b>
                            $ <%= total %>
                        </b></td>
                    <td class="checkout-container">
                        <form method="get" action="/checkout" style="display: inline">
                            <input type="submit" class="btn checkout-btn" value="Checkout" name=""
                                style="background-color: #D92B2B; color: white;">
                        </form>
                    </td>
                    <td class="cart-shopping">
                        <form method="get" action="/" style="display: inline">
                            <input type="submit" class="btn continue-btn" value="Continue Shopping" name="">
                        </form>
                    </td>
                </tr>
            </table>
            <br>
        </div>

    </section>

    <!-- Javascript files-->
